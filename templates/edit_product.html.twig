{% extends 'base.html.twig' %}

{% block title %}Modifier le produit{% endblock %}

{% block body %}
<div class="flex min-h-screen bg-blue-500 text-white">

<div class="flex flex-col w-64 bg-blue-800 p-4 border-r-2 border-black shadow-lg">
    <h2 class="text-2xl font-semibold text-center text-white mb-6">Menu</h2>
    <ul class="space-y-4">
        <li class="border-t-2 border-white w-1/2 mx-auto mb-4">
            <a href="{{ path('home') }}" class="block py-2 px-4 text-white hover:bg-blue-700 rounded-lg">Accueil</a>
        </li>
         {# {% if is_granted('view_users') %} #}
    <li class="border-t-2 border-white w-1/2 mx-auto mb-4">
        <a href="{{ path('users') }}" class="block py-2 px-4 text-white hover:bg-blue-700 rounded-lg">Utilisateurs</a>
    </li>
{#{% endif %}#}
        <li class="border-t-2 border-white w-1/2 mx-auto mb-4">
            <a href="{{ path('products') }}" class="block py-2 px-4 text-white hover:bg-blue-700 rounded-lg">Produits</a>
        </li>
        {# {% if is_granted('view_customers') %} #}
            <li class="border-t-2 border-white w-1/2 mx-auto mb-4">
                <a href="{{ path('customers') }}" class="block py-2 px-4 text-white hover:bg-blue-700 rounded-lg">Clients</a>
            </li>
            {#{% endif %}#}
    </ul>
    <div class="mt-auto">
        <a href="{{ path('app_logout') }}" class="block py-2 px-4 text-white hover:bg-blue-700 rounded-lg mt-4">Déconnexion</a>
    </div>
</div>

<div class="flex-grow p-8">
    <h1 class="text-4xl font-bold text-center text-white mb-8">Modifier le produit</h1>

    <div class="bg-white p-6 rounded-lg shadow-lg text-black">
        {{ form_start(form) }}

        <div class="mb-4">
            <label for="name" class="block text-lg font-medium text-gray-700">Nom du produit</label>
            {{ form_widget(form.name, {'attr': {'class': 'mt-1 block w-full p-2 border border-gray-300 rounded-md'}}) }}
        </div>

        <div class="mb-4">
            <label for="description" class="block text-lg font-medium text-gray-700">Description</label>
            {{ form_widget(form.description, {'attr': {'class': 'mt-1 block w-full p-2 border border-gray-300 rounded-md'}}) }}
        </div>

        <div class="mb-4">
            <label for="price" class="block text-lg font-medium text-gray-700">Prix</label>
            {{ form_widget(form.price, {'attr': {'class': 'mt-1 block w-full p-2 border border-gray-300 rounded-md'}}) }}
        </div>

        <div class="mb-6">
            <button type="submit" class="w-full bg-blue-600 text-white py-3 rounded-lg hover:bg-blue-700">Modifier</button>
        </div>

        {{ form_end(form) }}
    </div>

    <div class="mt-6 text-center">
        <a href="{{ path('products') }}" class="inline-block bg-gray-600 text-white px-6 py-3 rounded-lg hover:bg-gray-700">Retour à la liste</a>
    </div>
</div>
</div>

{% endblock %}
