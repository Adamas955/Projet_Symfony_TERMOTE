{% extends 'base.html.twig' %}

{% block title %}Liste des clients{% endblock %}

{% block body %}

<div class="flex min-h-screen bg-blue-500 text-white">

    <div class="flex flex-col w-64 bg-blue-800 p-4 border-r-2 border-black shadow-lg">
        <h2 class="text-2xl font-semibold text-center text-white mb-6">Menu</h2>
        <ul class="space-y-4">
            <li class="border-t-2 border-white w-1/2 mx-auto mb-4">
                <a href="{{ path('home') }}" class="block py-2 px-4 text-white hover:bg-blue-700 rounded-lg">Accueil</a>
            </li>
             {# {% if is_granted('view_users') %} #}
    <li class="border-t-2 border-white w-1/2 mx-auto mb-4">
        <a href="{{ path('users') }}" class="block py-2 px-4 text-white hover:bg-blue-700 rounded-lg">Utilisateurs</a>
    </li>
{#{% endif %}#}
            <li class="border-t-2 border-white w-1/2 mx-auto mb-4">
                <a href="{{ path('products') }}" class="block py-2 px-4 text-white hover:bg-blue-700 rounded-lg">Produits</a>
            </li>
            
        </ul>
        <div class="mt-auto">
            <a href="{{ path('app_logout') }}" class="block py-2 px-4 text-white hover:bg-blue-700 rounded-lg mt-4">Déconnexion</a>
        </div>
    </div>

    <div class="flex-grow p-8">
    <h1 class="text-4xl font-bold text-center text-white mb-8">Liste des clients</h1>

    <div class="bg-white p-6 rounded-lg shadow-lg text-black">
        <table class="min-w-full table-auto text-left">
            <thead>
                <tr class="bg-blue-800 text-white">
                    <th class="px-4 py-2">Prénom</th>
                    <th class="px-4 py-2">Nom</th>
                    <th class="px-4 py-2">Email</th>
                    <th class="px-4 py-2">Téléphone</th>
                    <th class="px-4 py-2">Adresse</th>
                    <th class="px-4 py-2">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for customer in customers %}
                    <tr class="border-b">
                        <td class="px-4 py-2">{{ customer.firstname }}</td>
                        <td class="px-4 py-2">{{ customer.lastname }}</td>
                        <td class="px-4 py-2">{{ customer.email }}</td>
                        <td class="px-4 py-2">{{ customer.phoneNumber }}</td>
                        <td class="px-4 py-2">{{ customer.address }}</td>
                        <td class="px-4 py-2">
                            <a href="{{ path('edit_customer', {'id': customer.id}) }}" class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700">Modifier</a>
                            <a href="{{ path('delete_customer', {'id': customer.id}) }}" class="bg-red-600 text-white px-4 py-2 rounded-lg hover:bg-red-700 ml-2" onclick="return confirm('Êtes-vous sûr ?')">Supprimer</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

    <div class="mt-6 text-center">
        <a href="{{ path('add_customer') }}" class="bg-green-600 text-white px-6 py-3 rounded-lg hover:bg-green-700">Ajouter un client</a>
    </div>
        </div>
            </div>
{% endblock %}
