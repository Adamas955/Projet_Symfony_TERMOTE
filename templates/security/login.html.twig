{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<div class="flex items-center justify-center min-h-screen bg-gray-100">
    <div class="card p-6 border-2 border-gray-300 rounded-lg shadow-lg" style="width: 400px;">
        <form method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            

            <h1 class="h3 mb-3 font-weight-normal text-center text-xl font-semibold text-gray-800">Connexion</h1>
            <div class="mb-4">
                <label for="inputEmail" class="block text-sm font-medium text-gray-700">Email : </label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control mt-1 p-2 border border-gray-300 rounded-md w-full" autocomplete="email" required autofocus>
            </div>
            <div class="mb-4">
                <label for="inputPassword" class="block text-sm font-medium text-gray-700">Mot de Passe : </label>
                <input type="password" name="password" id="inputPassword" class="form-control mt-1 p-2 border border-gray-300 rounded-md w-full" autocomplete="current-password" required>
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-lg text-lg focus:outline-none focus:ring-2 focus:ring-blue-500 w-full mt-4" type="submit">
                Se Connecter
            </button>
        </form>

        <div class="mt-3 text-center">
            <a href="{{ path('signup') }}" class="text-blue-500 hover:text-blue-700">Cr√©er un compte</a>
        </div>
    </div>
</div>
{% endblock %}
