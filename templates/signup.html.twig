{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
<div class="flex items-center justify-center min-h-screen bg-gray-100">
    <div class="card p-6 border-2 border-gray-300 rounded-lg shadow-lg" style="width: 400px;">
        <h1 class="h3 mb-3 font-weight-normal text-center text-xl font-semibold text-gray-800">Inscription</h1>

        {{ form_start(signupForm) }}
            <div class="mb-4">
                <label for="inputEmail" class="block text-sm font-medium text-gray-700">Email : </label>
                <div>
                    {{ form_row(signupForm.email) }}
                </div>
            </div>
            <div class="mb-4">
                <label for="inputFirstname" class="block text-sm font-medium text-gray-700">Prénom : </label>
                <div>
                    {{ form_row(signupForm.firstname) }}
                </div>
            </div>
            <div class="mb-4">
                <label for="inputLastname" class="block text-sm font-medium text-gray-700">Nom : </label>
                <div>
                    {{ form_row(signupForm.lastname) }}
                </div>
            </div>
            <div class="mb-4">
                <label for="inputPassword" class="block text-sm font-medium text-gray-700">Mot de Passe : </label>
                <div>
                    {{ form_row(signupForm.password) }}
                </div>
            </div>

            <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-lg text-lg focus:outline-none focus:ring-2 focus:ring-blue-500 w-full mt-4" type="submit">
                S'inscrire
            </button>
        {{ form_end(signupForm) }}

        <div class="mt-3 text-center">
            <a href="{{ path('app_login') }}" class="text-blue-500 hover:text-blue-700">Déjà un compte ? Se connecter</a>
        </div>
    </div>
</div>
{% endblock %}
